rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /invoices/{invoiceId} {
      // Allow creation if authenticated
      allow create: if request.auth.uid != null;
      // Allow read and write only if the authenticated user's UID matches the userId of the invoice
      allow read, write, delete: if request.auth.uid == resource.data.userId;
    }
    // Allow the user user to read and write their own user
    match /users/{userId} {
      allow read, write, delete: if request.auth.uid == userId;
    }
  }
}
